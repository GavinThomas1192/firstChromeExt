{
    "manifest_version": 2,
    "name": "SplashBackground",
    "description": "This extension will return open job listings from various websites",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "https://www.google.com/*",
                "https://wwww.pixabay.com/*"
            ],
            "css": [
                "main.css"
            ]
        }
    ],
    // "page_action": {
    //     "default_icon": "icon.png",
    //     "default_popup": "popup.html",
    //     "default_title": "My custom picture"
    // },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}